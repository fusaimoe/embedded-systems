<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_car"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Switch
        android:text="Notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="23dp"
        android:id="@+id/notifications"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:layout_marginTop="64dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Your cart is actually: OFF/PARKED" />

    <ToggleButton
        android:text="PARKI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/parking"
        tools:text="PARK"
        android:textOff=" PARK"
        android:textOn="PARKED"
        style="@android:style/Widget.Holo.Button.Toggle"
        android:checked="true"
        android:minWidth="100dp"
        android:layout_below="@+id/status"
        android:layout_alignEnd="@+id/status" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchon"
        android:textOff="SWITCH ON"
        android:textOn="SWITCH OFF"
        style="@android:style/Widget.Holo.Button.Toggle"
        android:checked="false"
        android:minWidth="100dp"
        android:layout_alignBaseline="@+id/parking"
        android:layout_alignBottom="@+id/parking"
        android:layout_alignStart="@+id/status" />

</RelativeLayout>